<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_detalle"
        tools:context=".Detalle">

    <TextView
            android:text="Actividad Detalle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:textSize="30sp"
            android:textColor="@android:color/holo_orange_dark"
            app:layout_constraintTop_toBottomOf="@+id/btnCambiarTitulo"
            app:layout_constraintEnd_toStartOf="@+id/imageView" android:layout_marginBottom="132dp"
            app:layout_constraintBottom_toTopOf="@+id/button3" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginEnd="39dp"
    />
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="ingrese su nombre?"
            android:ems="10"
            android:id="@+id/editText"
            android:layout_marginTop="109dp"
            android:layout_marginBottom="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/btnCambiarTitulo" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:text="ingresar Nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnCambiarTitulo"
            android:onClick="onObtenerNombre"
            app:layout_constraintTop_toBottomOf="@+id/editText" android:layout_marginEnd="30dp"
            android:layout_marginBottom="52dp"
            app:layout_constraintEnd_toEndOf="@+id/editText" app:layout_constraintBottom_toTopOf="@+id/textView2"/>
    <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/button3"
            android:backgroundTint="@color/colorAccent" android:onClick="onCancel"
            android:background="@drawable/ic_launcher_foreground"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="85dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:layout_marginBottom="100dp"
            app:layout_constraintEnd_toStartOf="@+id/btnSelfie"
            android:layout_marginEnd="51dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/imageView"
            android:layout_marginTop="51dp"
            app:layout_constraintStart_toEndOf="@+id/textView2" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView2" android:layout_marginEnd="28dp"
    />
    <Button
            android:text="Email de Queja!!!!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnEmailQueja" android:layout_marginEnd="68dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/editText"/>
    <Button
            android:text="SELFIE!!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnSelfie" android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView" app:layout_constraintStart_toEndOf="@+id/button3"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="68dp"
    />
</android.support.constraint.ConstraintLayout>